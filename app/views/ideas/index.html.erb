<div class="header">
    <h1> Welcome, <%=current_user.alias%> </h1>
    <a class="logout" href="/logout">Log out</a>
</div>
<br>
<br>
<div class="main">
<div class="alert alert-warning" role="alert">
  <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
</div>
    
    <form action="ideas/create" method="post">
        <div class="form-group ">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <input type="text" name="post" value="Post something witty here...">
        <input type="submit" name="Idea!" value="submit">
    </form>
    <br>
    <br>
    <div class="ideas">
        <% @ideas.each do |idea|%>
        <p> <a href="users/<%=idea.user.id%>"><%=idea.user.alias%> </a>says:</p>
        <p> <%=idea.post%>
        <a href="bright_ideas/<%=idea.id%>/like" data-method="patch"> Like</a>
        <p><a href="bright_ideas/<%=idea.id%>"><%=idea.likes.count%> people</a> liked this</p>
        
        <% if current_user == idea.user %>
        <form action = "bright_ideas/<%=idea.id%>/delete" method = "post">
            <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
            <input type = 'hidden' name = "_method" value = "delete">
            <input type = "submit" value = "Delete Idea" >
        </form>
        <% end %>
    <% end %>
    <div>
</div>